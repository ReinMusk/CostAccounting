<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CostAccounting.AddNotePage"
             NavigationPage.HasBackButton="False">

    <NavigationPage.TitleView>
        <Label x:Name="title" Text="" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontSize="24"/>
    </NavigationPage.TitleView>
    <StackLayout BackgroundColor="White">
        <Frame Margin="40,300,40,40"
                Padding="0" BorderColor="Black" BackgroundColor="AliceBlue">
            <Entry x:Name="sum_txt" Placeholder="Сумма" PlaceholderColor="Gray" TextColor="Black"/>
        </Frame>
        <Button Text="Save" Margin="40,0,40,40" TextColor="Black" BackgroundColor="BlanchedAlmond" BorderColor="Black" BorderWidth="1"></Button>
    </StackLayout>

</ContentPage>